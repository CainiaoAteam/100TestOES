<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.oes.bean.Student" table="student">
		<id name="sid" column="sid"  type="integer">
			<generator class="native"/>
		</id>
		
		<property name="sno" column="sno"  type="string"/>
		<property name="sname" column="sname"  type="string"/>
		<property name="gender" column="gender"  type="string"/>
		<property name="idcardnum" column="idcarenum"  type="string"/>
		<property name="department" column="department"  type="string"/>
		<property name="grade" column="grade"  type="string"/>
		<property name="phone" column="phone"  type="string"/>
		<property name="password" column="password"  type="string"/>
		

		<!-- 配置的多方 name是JavaBean属性名称  class="一方类的全路径" cloumn="外键的名称"  -->
		<many-to-one name="" class="" column=""/>
		
	</class>
    </hibernate-mapping>