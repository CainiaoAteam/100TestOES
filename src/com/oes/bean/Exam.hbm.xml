<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
         "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
         "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.oes.bean.Exam" table="exam">
		<id name="examid" column="examid"  type="integer">
			<generator class="native"/>
		</id>
		
		<property name="examno" column="examno"  type="string"/>
		<property name="examname" column="examname"  type="string"/>
		<property name="examdate" column="examdata"  type="data"/>
		<property name="examtime" column="examtime"  type="double"/>

		<!-- 配置的多方 name是JavaBean属性名称  class="一方类的全路径"  cloumn="外键的名称"  -->
		<many-to-one name="testpaper"  column="tpid"  class="com.oes.bean.TestPaper"  />
		
	</class>
    </hibernate-mapping>